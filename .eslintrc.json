{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "airbnb", "airbnb/hooks", "airbnb-typescript-prettier",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
      "react": {
        "pragma": "React",
        "version": "detect"
      }
    },
    "rules": {
      "global-require": 0 
    }
}
