{
  "private": true,
  "name": "hacktj-2021",
  "homepage": "https://hacktj.org/2021",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "preact build --preload --brotli",
    "serve": "sirv build --port 8080 --cors --single",
    "dev": "preact watch --refresh",
    "lint": "prettier . --write; eslint 'src/**/*.{js,jsx,ts,tsx}' --fix",
    "test": "jest ./tests",
    "tint": "node tint-sponsor-images.js",
    "switch": "./switch",
    "deploy": "./deploy"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "jsx-a11y"
    ],
    "extends": [
      "preact",
      "plugin:@typescript-eslint/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "ignorePatterns": [
      "build/"
    ]
  },
  "dependencies": {
    "@popperjs/core": "^2.9.1",
    "dayjs": "^1.10.4",
    "preact": "^10.5.12",
    "preact-render-to-string": "^5.1.15",
    "preact-router": "^3.2.1",
    "react-parallax-tilt": "^1.4.92",
    "react-popper": "^2.2.4",
    "react-popper-tooltip": "^4.1.2",
    "web-vitals": "^1.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/preact": "^2.0.1",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "eslint": "^7.21.0",
    "eslint-config-preact": "^1.1.3",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "gh-pages": "^3.1.0",
    "htmlparser2": "^6.0.1",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "jimp": "^0.16.1",
    "preact-cli": "^3.0.5",
    "prettier": "^2.2.1",
    "sirv-cli": "^1.0.11",
    "typescript": "^4.2.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HackTJ/2021.git"
  },
  "bugs": {
    "url": "https://github.com/HackTJ/2021/issues"
  }
}
